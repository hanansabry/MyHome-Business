<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".presentation.businessowner.AddItemActivity">

    <EditText
        android:id="@+id/editTextItemName"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/corner_light_gray"
        android:gravity="bottom"
        android:hint="Item Name"
        android:inputType="textPersonName"
        android:padding="16dp"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/text_gray" />

    <EditText
        android:id="@+id/editTextPrice"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/corner_light_gray"
        android:gravity="bottom"
        android:hint="Price"
        android:inputType="numberDecimal"
        android:padding="16dp"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/text_gray" />

    <EditText
        android:id="@+id/editTextCategory"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/corner_light_gray"
        android:gravity="bottom"
        android:hint="Category"
        android:padding="16dp"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/text_gray" />

    <EditText
        android:id="@+id/editTextDesc"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/corner_light_gray"
        android:gravity="start"
        android:hint="Description"
        android:inputType="textMultiLine"
        android:padding="16dp"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/text_gray" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="6dp"
        android:weightSum="6">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/colorAccent2"
            android:text="Upload image:"/>

        <EditText
            android:id="@+id/editTextBannerUri"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="56dp"
            android:background="@drawable/corner_light_gray"
            android:gravity="bottom"
            android:layout_gravity="center"
            android:hint="Image Uri"
            android:padding="16dp"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/text_gray"
            android:enabled="false"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:src="@drawable/ic_upload"
            android:scaleType="fitCenter"
            android:background="@null"
            android:layout_gravity="center"
            android:foreground="?attr/selectableItemBackground"
            android:tint="@color/colorAccent2"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnAddItem"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/cornered_accent_bg_fill"
        android:text="Add Item"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>